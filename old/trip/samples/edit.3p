method show_sub_menu(item,data,state)
{
	var it,cmd
	ref menu m
	set m menu_
	set it {m.get_item item data}
 	set cmd {m.get_cmd it}

	if {peek it 0} ? 0 {
	}, 's' {
		m.show state {this.get_menu cmd}
		if state ? 0 {
			m.hide
		};
	}, 'i' {
		m.show state  ""
		if state ? 0 {
			this.execute cmd
		};
	};
}


method show_menu(v,sub)
{
	ref menu m
	set m menu_
	if {m.shown} ? 0 {
		m.show 1 sub
	}, <> {
		m.show 0 0
	};
}

